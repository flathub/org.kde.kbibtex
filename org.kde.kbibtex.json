{
    "id": "org.kde.kbibtex",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-24.08",
    "sdk": "org.kde.Sdk",
    "command": "kbibtex",
    "rename-icon": "kbibtex",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=cups",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "*.a",
        "*.la",
        "/share/man",
        "/share/pkgconfig",
        "/share/qlogging-categories5"
    ],
    "modules": [
        {
            "name": "boost",
            "buildsystem": "simple",
            "build-commands": [
                "./bootstrap.sh --prefix=/app --with-libraries=system",
                "./b2 -j $FLATPAK_BUILDER_N_JOBS install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://archives.boost.io/release/1.90.0/source/boost_1_90_0.tar.bz2",
                    "sha256": "49551aff3b22cbc5c5a9ed3dbc92f0e23ea50a0f7325b0d198b705e8ee3fc305",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6845,
                        "stable-only": true,
                        "url-template": "https://archives.boost.io/release/$version/source/boost_${major}_${minor}_$patch.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "openjpeg",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "cleanup": [
                "/bin",
                "/lib/openjpeg-*"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/uclouvain/openjpeg/archive/v2.5.4.tar.gz",
                    "sha256": "a695fbe19c0165f295a8531b1e4e855cd94d0875d2f88ec4b61080677e27188a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 2550,
                        "stable-only": true,
                        "url-template": "https://github.com/uclouvain/openjpeg/archive/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "poppler",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_GTK_TESTS=OFF",
                "-DBUILD_QT5_TESTS=OFF",
                "-DBUILD_QT6_TESTS=OFF",
                "-DBUILD_CPP_TESTS=OFF",
                "-DBUILD_MANUAL_TESTS=OFF",
                "-DENABLE_UTILS=OFF",
                "-DENABLE_QT6=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-25.12.0.tar.xz",
                    "sha256": "c18b40eb36b1a0c5b86e29ca054bf0770304583da4f2cdd42fe86eca6a20de48",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 3686,
                        "stable-only": true,
                        "url-template": "https://poppler.freedesktop.org/poppler-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "poppler-data",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-data-0.4.12.tar.gz",
                    "sha256": "c835b640a40ce357e1b83666aabd95edffa24ddddd49b8daff63adb851cdab74",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 3687,
                        "stable-only": true,
                        "url-template": "https://poppler.freedesktop.org/poppler-data-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kbibtex",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/KBibTeX/0.10.0/kbibtex-0.10.0.tar.xz",
                    "sha256": "b127b240a7cd77c538619dc882a399b3c6ccd77a04428a497af906f14d09b8c4",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1494,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/KBibTeX/$major.$minor.$patch/kbibtex-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "appstream.patch"
                },
                {
                    "type": "patch",
                    "path": "appstream2.patch"
                },
                {
                    "type": "patch",
                    "path": "cmake.patch"
                }
            ]
        }
    ]
}
